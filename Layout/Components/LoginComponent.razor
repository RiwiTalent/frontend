@namespace riwi.Layout.Components
@using MudBlazor
@using riwi.Models
@using Microsoft.AspNetCore.Components.Authorization
@using riwi.Extensiones
@inject AuthenticationStateProvider autenticacionProvider
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

<div class="main-container">
    <div class="secondary-container">
        <div class="login-card">
            <div class="card-content">
                <div class="text-center mb-3">
                    <img src="./riwi.png" alt="Logo Riwi" class="riwi-logo" />
                </div>
                <h5 class="texto1">Bienvenido de nuevo</h5>
                <p class="texto2">Ingresa con tu cuenta para continuar</p>
                <MudForm Style="display: flex; align-items: center " Valid="IniciarSesion">
                    <br>
                    <p class="input-container form-group Login_contenedor_input">
                        <span class="correo_span">Correo</span>
                        <label for="Password" class="input-icon-container">
                            <img src="./mail-filled.svg" alt="Icono de correo electronico" class="input-icon" />
                        </label>
                        <input type="text" placeholder="Ingresa tu correo electronico" @bind="login.Email" name="Email" id="text" class="input-field" autocomplete="Email">
                    </p>
                    <br>
                    <p class="input-container form-group Login_contenedor_input">
                        <span class="Password_span">Contrase単a</span>
                        <label for="Password" class="input-icon-container">
                            <img src="./lock.svg" alt="Icono de contrase単a" class="input-icon" />
                        </label>
                        <input type="@passwordInputType" placeholder="Ingresa tu contrase単a" @bind="login.Password" name="Password" id="Password" class="input-field" autocomplete="Password">
                        <label for="Password" class="eye-icon-container end-icon" @onclick="TogglePasswordVisibility">
                            <img src="./eye-off.svg" alt="Icono para ocultar/mostrar contrase単a" class="eye-icon" />
                        </label>
                    </p>

                    <div class="button-container">
                        <button type="button" class="btn mt-3 Ingresar" @onclick="IniciarSesion">Ingresar</button>
                    </div>
                </MudForm>
            </div>
        </div>
        <div class="image-container">
            <img src="./fondo1.png" alt="Imagen de login" class="login-image" />
        </div>
        
        <div class="image-container2"></div>
    </div>
</div>

@code {
    private User login = new User();
    private string passwordInputType = "password"; // Inicialmente oculto

    private void TogglePasswordVisibility()
    {
        passwordInputType = passwordInputType == "password" ? "text" : "password"; // Alterna el tipo de input
    }

    private async Task IniciarSesion()
    {
        if (login.Email == "carlos")
        {
            Console.WriteLine("Func");
        }

        var loginResponse = await HttpClient.PostAsJsonAsync<User>("http://localhost:5113/riwitalent/login", login);
        Console.WriteLine(loginResponse);
        if (loginResponse != null)
        {
            var sesionUsuario = await loginResponse.Content.ReadFromJsonAsync<User>();
            var autenticacionExt = (AuthenticacionExtension)autenticacionProvider;
            await autenticacionExt.ActualizarEstadoAutenticacion(sesionUsuario);

            NavigationManager.NavigateTo("/Coders");
        }
        else
        {
            Console.WriteLine("No funciona");
        }
    }
}

