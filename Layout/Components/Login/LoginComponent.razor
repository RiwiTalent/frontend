@namespace riwi.Layout.Components
@using riwi.Models;
@using Microsoft.AspNetCore.Components.Authorization;
@using riwi.Services;
@inject AuthenticationStateProvider autenticacionProvider;
@inject NavigationManager NavigationManager;
@inject HttpClient HttpClient;
@inject SweetAlertService Swal;

<head>
    <link rel="stylesheet" href="css/LoginComponent.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

@*Integracion*@

<div class="main-container">
    <div class="secondary-container">
        <div class="login-card">
            <div class="card-content">
                <div class="text-center mb-3">
                    <img src="images/riwi.png" alt="Logo Riwi" class="riwi-logo" />
                </div>
                <h5 class="texto1">Bienvenido de nuevo</h5>
                <p class="texto2">Ingresa con tu cuenta para continuar</p>
                <MudForm Valid="IniciarSesion">
                    <br>
                    <p class="input-container form-group">
                        <input type="text" placeholder="Ingresa tu correo electronico" @bind="login.Email" name="Email"
                            id="text" class="input-field" autocomplete="Email">
                        <label class="input-label" for="text">Correo</label>
                    </p>
                    <br>
                    <p class="input-container form-group">
                        <input type="password" placeholder="Ingresa tu contraseña" @bind="login.Password"
                            name="Password" id="Password" class="input-field" autocomplete="Password">
                        <label class="input-label" for="text">Contraseña</label>
                    </p>
                    <div class="button-container">
                        <button type="button" class="btn mt-3 Ingresar" @onclick="IniciarSesion">Ingresar</button>
                    </div>
                </MudForm>
            </div>
        </div>
        <button class="btn btn-primary" @onclick="SuccessSweetAlert">
            error!
        </button>
        <div class="image-container">
            <img src="images/login.png" alt="Imagen de login" class="login-image" />
        </div>
    </div>
</div>


@code {
    private async Task SuccessSweetAlert()
    {
        await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Error!",
                Text = "Do you want to continue",
                Icon = SweetAlertIcon.Error,
                ConfirmButtonText = "Cool"
            });
    }
    private User login = new User();

    private async Task IniciarSesion()
    {
        var loginResponse = await HttpClient.PostAsJsonAsync<User>("http://localhost:5113/riwitalent/login", login);
        if (loginResponse.IsSuccessStatusCode)
        {
            var sesionUsuario = await loginResponse.Content.ReadFromJsonAsync<User>();
            var autenticacionExt = (AuthenticacionExtension)autenticacionProvider;
            await autenticacionExt.ActualizarEstadoAutenticacion(sesionUsuario);

            NavigationManager.NavigateTo("/home");
            await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "bIENVENIDO!",
                Text = "continua",
                Icon = SweetAlertIcon.Success,
                ConfirmButtonText = "Cool",
                Timer = 1500
            });
        }
        else
        {
            Console.WriteLine("No funciona");
            await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Error!",
                Text = "continua",
                Icon = SweetAlertIcon.Error,
                ConfirmButtonText = "Cool",
                Timer = 1500
            });
        }
    }

}