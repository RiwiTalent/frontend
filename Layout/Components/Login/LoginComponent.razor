@namespace riwi.Layout.Components
@using MudBlazor
@using riwi.Models
@using Microsoft.AspNetCore.Components.Authorization
@using riwi.Services
@inject AuthenticationStateProvider autenticacionProvider
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

<head>
    <link rel="stylesheet" href="css/LoginComponent.css">
</head>

@*Integracion*@

<div class="main-container">
    <div class="secondary-container">
        <div class="login-card">
            <div class="card-content">
                <div class="text-center mb-3">
                    <img src="images/riwi.jpg" alt="Logo Riwi" class="riwi-logo" />
                </div>
                <h5 class="texto1">Bienvenido de nuevo</h5>
                <p class="texto2">Ingresa con tu cuenta para continuar</p>
                <MudForm  Valid="IniciarSesion">
                    <br>
                    <p class="input-container form-group">
                        <input type="text" placeholder="Ingresa tu correo electronico" @bind="login.Email" name="Email" id="text" class="input-field" autocomplete="Email">
                        <label class="input-label" for="text">Correo</label>
                    </p>
                    <br>
                    <p class="input-container form-group">
                        <input type="password" placeholder="Ingresa tu contraseña" @bind="login.Password" name="Password" id="Password" class="input-field" autocomplete="Password">
                        <label class="input-label" for="text">Contraseña</label>
                    </p>
                    <div class="button-container">
                        <button type="button" class="btn mt-3 Ingresar" @onclick="IniciarSesion">Ingresar</button>
                    </div>
                </MudForm>
            </div>
        </div>
        <div class="image-container">
            <img src="images/login.png" alt="Imagen de login" class="login-image" />
        </div>
    </div>
</div>



@code {
    private User login = new User();

    private async Task IniciarSesion()
    {
        var loginResponse = await HttpClient.PostAsJsonAsync<User>("http://localhost:5113/riwitalent/login", login);
        if(loginResponse.IsSuccessStatusCode)
        {
            var sesionUsuario = await loginResponse.Content.ReadFromJsonAsync<User>();
            var autenticacionExt = (AuthenticacionExtension)autenticacionProvider;
            await autenticacionExt.ActualizarEstadoAutenticacion(sesionUsuario);

            NavigationManager.NavigateTo("/home");
        }
        else
        {
            Console.WriteLine("No funciona");
        }
    }
}
