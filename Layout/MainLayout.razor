@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using riwi.Services
@inject AuthenticationStateProvider autenticacionProvider
@inject NavigationManager navManager


<MudThemeProvider />
<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        Riwi Talent
    </MudAppBar>
    <MudDrawer style="300px" @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
    <MudAppBar>
        <a @onclick="CerrarSesion" href="javascript:void(0)">Salir</a>
    </MudAppBar>
</MudLayout>

<CascadingBlazoredModal></CascadingBlazoredModal>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    //Login
    private async Task CerrarSesion()
    {
        var autenticacionExt = (AuthenticacionExtension)autenticacionProvider;
        await autenticacionExt.ActualizarEstadoAutenticacion(null);
        navManager.NavigateTo("/",true);
    }
}
